        /* Card Styling */
        .profile {
            background: rgba(255, 255, 255, 0.15);
            backdrop-filter: blur(10px);
            border-radius: 15px;
            padding: 30px;
            text-align: center;
            width: 100%;
            max-width: 400px;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            position: relative;
            overflow: hidden;
            border: 2px solid rgba(255, 255, 255, 0.3);
        }

        .profile:hover {
            transform: translateY(-8px);
            box-shadow: 0px 15px 30px rgba(0, 0, 0, 0.3);
        }

        .profile img {
            width: 140px;
            height: 140px;
            border-radius: 50%;
            object-fit: cover;
            border: 4px solid #fff;
            transition: transform 0.3s ease;
        }

        .profile:hover img {
            transform: scale(1.08);
        }

        .profile h2 {
            margin: 15px 0 8px;
            font-size: 24px;
            color: #fff;
            font-weight: 600;
        }

        .profile p {
            font-size: 16px;
            color: #f8f8f8;
            margin: 5px 0;
        }

        .profile p strong {
            color: #fff;
        }

        /* Responsive Design */
        @media (max-width: 768px) {
            .container {
                flex-direction: column;
                align-items: center;
            }
        }
    </style>
