    /* padding: 20px; */
}

/* Main Container */
.container {
    font-family: 'Poppins', sans-serif;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 30px;
    margin: 30px;
}

/* Card Styling */
.first-info {
    width: 95%;
    max-width: 1000px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    padding: 35px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 15px;
    backdrop-filter: blur(10px);
    box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    flex-wrap: wrap; /* Ensure it wraps properly on smaller screens */
}

/* Hover Effects */
.first-info:hover {
    transform: scale(1.02);
    box-shadow: 0px 12px 30px rgba(0, 0, 0, 0.3);
}
.data-img {
    flex: 1; /* Make image container flexible */
    display: flex;
    justify-content: center;
    align-items: center;
    min-width: 150px; /* Prevent it from getting too small */
}
/* Image Styling */
.data-img img {
    max-width: 100%;
    height: auto;
    border-radius: 15px;
    box-shadow: 0px 5px 15px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

/* Image Hover Effect */
.data-img img:hover {
    transform: scale(1.1);
    box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.4);
}

/* Text Styling */
.data {
    flex: 2; /* Give text more space but allow it to shrink */
    font-size: 1.2rem;
    line-height: 1.6;
    text-align: justify;
    min-width: 200px; /* Prevent text from becoming too small */
}

.owner-info {
    display: flex;
    flex-direction: column;
    gap: 5px;
    margin-top: 10px;
}

.owner-name {
    font-size: 1.5rem; /* Increased size */
    font-weight: 300; /* Decreased font weight */
}

.owner-qualification {
    font-size: 1.2rem; /* Smaller than name */
    font-weight: 200; /* Decreased font weight */
}
.total-info{
    display: flex;
    align-items: center;
    flex-direction: column;
    gap: 10px;
    
}
/* Responsive Design */
/* Mobile View Fix */
@media (max-width: 768px) {
    .first-info {
        flex-direction: column;
        text-align: center;
        padding: 20px;
        width: 100%;
    }

    .data-img {
        width: 100%;
        display: flex;
        justify-content: center;
    }

    .data-img img {
        width: 80%;
        max-width: 180px;
        height: auto;
    }

    .data {
        font-size: 1rem;
        text-align: center;
        width: 90%;
    }
}

@media (max-width: 480px) {  
    .first-info {
        flex-direction: column; 
        text-align: center;
        align-items: center;
        justify-content: center;
        padding: 20px;
        gap: 15px;
        width: 90%; /* Ensure it scales with the screen */
    }

    .data-img {
        width: 100%;  /* Make the container responsive */
        display: flex;
        justify-content: center;
    }

    .data-img img {
        width: 80%;  /* Reduce size dynamically */
        max-width: 180px; /* Prevent it from getting too large */
        height: auto;
    }

    .data {
        font-size: 1rem;  
        text-align: center;
        width: 90%; /* Ensure text scales properly */
    }
}

