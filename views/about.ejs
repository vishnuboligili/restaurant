* {
    
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}
/* Prevent horizontal scrolling */
html, body {
    overflow-x: hidden;
    width: 100%;
    margin: 0;
    padding: 0;
}

body {
    background: linear-gradient(135deg, #ff7e5f, #feb47b); /* Warm gradient */
