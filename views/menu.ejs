}

/* Popup Styles */
.popup-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    justify-content: center;
    align-items: center;
}

.popup-box {
    position: relative;
    background: white;
    padding: 20px;
    border-radius: 8px;
    width: 300px;
    text-align: center;
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
}
.popup-box button{
    border-radius: 15px;
    margin-bottom: 5px;
}
.popup-close {
    position: absolute;
    right: 10px;
    top: 10px;
    font-size: 24px;
    cursor: pointer;
    color: gray;
    font-weight: bold;
}

.popup-close:hover {
    color: black;
}


.stars {
    display: flex;
    justify-content: center;
    margin: 10px 0;
}

.star {
    font-size: 30px;
    cursor: pointer;
    color: gray;
    transition: color 0.3s;
}

.star:hover, .star.active {
    color: gold;
}

#review-form textarea {
    width: 100%;
    padding: 10px;
    margin: 10px 0;
    border: 1px solid #ccc;
    border-radius: 5px;
}

#review-form button {
    background: #28a745;
    color: white;
    border: none;
    padding: 10px;
    cursor: pointer;
    border-radius: 5px;
    width: 100%;
}

#review-form button:hover {
    background: #218838;
}

        .popup-box img {
            width: 100%;
            height: 250px;
            object-fit: cover;
            border-radius: 5px;
        }

        
        /* Ensure the pop-up and review box have relative positioning */
        .popup-container, .review-box {
            position: relative;  /* Important: Keeps the close button inside */
            padding: 20px;
            border-radius: 8px;
        }

        /* Large close button inside the box */
        .popup-close-large {
            position: absolute;
            top: 10px;  /* Adjust so it stays inside */
            right: 10px; /* Keeps it inside the box */
            font-size: 30px;
            font-weight: bold;
            color: black;
            background: none;
            border: none;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .popup-close-large:hover {
            transform: scale(1.2);
        }

        @keyframes fadeIn {
            from { opacity: 0; transform: scale(0.9); }
            to { opacity: 1; transform: scale(1); }
        }
    </style>
