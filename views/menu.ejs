    <style>
        .quantity-container {
            display: flex;
            align-items: center;
            gap: 8px;
            margin-top: 8px;
        }
    
        .quantity-container label {
            font-size: 14px;
            font-weight: bold;
        }
    
        .quantity-select {
            padding: 5px 10px;
            border: 2px solid #ff5733;
            border-radius: 5px;
            font-size: 16px;
            background-color: #fff;
            cursor: pointer;
            transition: all 0.3s ease;
